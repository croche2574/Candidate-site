<% provide(:title, 'Add Candidate') %>
<h1>Add a Candidate</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@candidate) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :race %>
      <%= f.text_field :race %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :website %>
      <%= f.text_field :website %>

      <%= f.label :facebook %>
      <%= f.text_field :facebook %>

      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>