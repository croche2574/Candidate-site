<%= form_for(@candidate) do |f| %>
    
    
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :imgur_id %>
    <%= f.text_field :imgur_id, class: 'form-control'%>

    <%= f.label :race %>
    <%= f.text_field :race, class: 'form-control' %>

    <%= f.label :rating %>
    <%= f.text_field :rating %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :website %>
    <%= f.text_field :website %>

    <%= f.label :facebook %>
    <%= f.text_field :facebook %>

    <%= f.label :section1 %>
    <%= f.text_area :section1 %>

    <%= f.label :section2 %>
    <%= f.text_area :section2 %>

    <%= f.label :section3 %>
    <%= f.text_area :section3 %>

    <%= f.label :section4 %>
    <%= f.text_area :section4 %>

    <%= f.label :section5 %>
    <%= f.text_area :section5 %>

    <%= f.label :section6 %>
    <%= f.text_area :section6 %>

    <%= f.label :section7 %>
    <%= f.text_area :section7 %>

    <%= f.label :section8 %>
    <%= f.text_area :section8 %>

    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>